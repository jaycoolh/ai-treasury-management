{
  "mcpServers": {
    "hedera": {
      "command": "node",
      "args": [
        "../../packages/mcp-hedera/dist/index.js",
        "--ledger-id=testnet"
      ],
      "env": {
        "HEDERA_OPERATOR_ID": "${UK_HEDERA_ACCOUNT_ID}",
        "HEDERA_OPERATOR_KEY": "${UK_HEDERA_PRIVATE_KEY}"
      }
    },
    "a2a": {
      "command": "node",
      "args": ["../../packages/mcp-a2a/dist/index.js"],
      "env": {
        "AGENT_ID": "uk-treasury-agent",
        "PARTNER_AGENT_URL": "${UK_PARTNER_AGENT_URL}",
        "PARTNER_HEDERA_ACCOUNT_ID": "${UK_PARTNER_HEDERA_ACCOUNT_ID}",
        "MESSAGES_DIR": "./messages/inbox"
      }
    },
    "arp": {
      "command": "node",
      "args": ["../../packages/mcp-arp/dist/index.js"],
      "env": {
        "ARP_DATA_DIR": "${UK_ARP_DATA_DIR}"
      }
    }
  }
}
